---
import DiscographyContainer from '../components/DiscographyContainer';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Artists | RAGGSTARRECORDS">
	<main class="bg-[#262626]">
		<span class="flex flex-col items-center">
			<h1 class="font-Druk text-white tracking-wide pt-12 md:pt-16 text-3xl md:text-5xl">
				CLIENT LIST
			</h1>
			<p class="text-gray-400 text-center w-[70%] py-2 text-[11px] md:text-[14px]">Click on an artist card to see songs they've released using RaggStar services.</p>
		</span>
		<DiscographyContainer client:load />
	</main>
</Layout>