---
import Layout from '../layouts/Layout.astro';
import { servicesMap } from '../strings'

const serviceHeaders = [...servicesMap.keys()];
---

<Layout title="Artists | RAGGSTARRECORDS">
	<main>
		<h1 class=" text-center text-gray-200 font-[Druk] pt-12 md:pt-20 pb-10 text-3xl md:text-5xl">
			SERVICES
		</h1>
		<span class={`flex flex-col gap-10 items-center pb-10`}>
		{
			serviceHeaders.map((header:string) => {
				return (
					<div class="mx-10 sm:mx-0 self-center  md:w-5/12">
						<h2 class="font-Druk md:text-2xl text-xl">{header.toUpperCase()}</h2>
						<p class="">{servicesMap.get(header)}</p>
					</div>
				);
			})
		}
		</span>
	</main>
</Layout>